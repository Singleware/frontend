  "name": "@singleware/frontend",
  "description": "Singleware frontend project package.",
  "license": "MIT",
  "version": "1.1.5",
  "main": "release/source/index.js",
  "types": "release/types/index.d.ts",
  "keywords": [
    "frontend application",
    "empty frontend project"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/singleware/frontend"
  },
  "engines": {
    "node": ">=10"
  },
  "dependencies": {
    "@singleware/application": "^1.1.9",
    "@singleware/class": "^1.1.19",
    "@singleware/jsx": "^1.0.20",
    "@singleware/path": "^1.0.5"
  },
  "devDependencies": {
    "prettier": "^1.16.4",
    "typescript": "^2.9.2"
  },
  "prettier": {
    "printWidth": 140,
    "tabWidth": 2,
    "singleQuote": true,
    "semi": true
  },
  "scripts": {
    "build": "npm run make && npm run update",
    "make": "tsc",
    "update": "npm run update-root && npm run update-services",
    "update-root": "cp -Rf ./source/*.d.ts ./release/types",
    "update-services": "cp -Rf ./source/services/*.d.ts ./release/types/services"
  }
}
